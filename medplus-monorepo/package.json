{
    "name": "medplus-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "clean": "turbo run clean && rm -rf node_modules",
        "web": "npm run dev --workspace=@medplus/web",
        "mobile": "npm run dev --workspace=@medplus/mobile"
    },
    "devDependencies": {
        "turbo": "^1.11.2",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}